{
  "enabled": true,
  "name": "README Auto-Updater",
  "description": "Monitors file modifications and automatically reviews changes to update README.md when significant features, setup steps, or architecture changes are detected",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/**/*.py",
      "pyproject.toml",
      "*.py",
      "*.yaml",
      "*.yml"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "A file has been modified: {{filePath}}\nReview the changes and update README.md if necessary. Focus on:\n- New features added\n- Setup/installation steps\n- Architecture changes\nOnly update README.md if the changes are significant enough to warrant documentation updates. Keep updates concise and relevant."
  }
}